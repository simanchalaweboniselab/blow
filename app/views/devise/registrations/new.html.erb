<h2>Sign up</h2>
<div class="span4">
  <%= form_for(resource, :as => resource_name,:html => { :class => "form-horizontal"}, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <div class="control-group">
          <label class="control-label"><%= f.label :first_name %></label>
          <div class="controls"><%= f.text_field :first_name %></div>
        </div>
        <div class="control-group">
          <label class="control-label"><%= f.label :last_name %></label>
          <div class="controls"><%= f.text_field :last_name %></div>
        </div>
        <div class="control-group">
          <label class="control-label"><%= f.label :email %></label>
          <div class="controls"><%= f.email_field :email %></div>
        </div>
        <div class="control-group">
          <label class="control-label"><%= f.label :password %></label>
          <div class="controls"><%= f.password_field :password %></div>
        </div>
        <div class="control-group">
          <label class="control-label"><%= f.label :password_confirmation %></label>
          <div class="controls"><%= f.password_field :password_confirmation %></div>
        </div>
        <div class="form-actions">
          <%= f.submit "Sign up",  :class => " btn btn-primary" %>
        </div>
      </fieldset>
  <% end %>
  <%= render "links" %>
</div>