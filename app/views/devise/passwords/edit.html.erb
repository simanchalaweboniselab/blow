<h2 xmlns="http://www.w3.org/1999/html">Change your password</h2>
<div class="span4">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <fieldset>
        <div class="control-group">
          <label class="control-label"><%= f.label :password, "New password" %><br /></label>
          <div class="controls"><%= f.password_field :password %></div>
        </div>
        <div class="control-group">
          <label class="control-label"><%= f.label :password_confirmation, "Confirm new password" %><br /></label>
          <div class="controls"><%= f.password_field :password_confirmation %></div>
        </div>
        <div class="form-actions"><%= f.submit "Change my password", :class => "btn btn-primary" %></div>
      </fieldset>
  <% end %>
  <%= render "links" %>
</div>